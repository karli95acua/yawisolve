<html lang="es">
<meta charset="UTF-8" />
    <body>
        <HeaderModule title="Configuración" />
        <main>
        <h1>Tutoriales de Configuración</h1>
        <VideoCard videos={videos} />
        </main>
    </body>
</html>

<style>
    h1 {
        display: flex;
