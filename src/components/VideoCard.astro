---
// Props
interface Video {
    title: string;
    description: string;
    category: string;
    duration: string;
    }

    interface Props {
    videos: Video[];
    }

const { videos } = Astro.props;
---
<section class="video-card-list">
    {videos.map((video) => (
        <div class="video-card">
        <div class="video-thumbnail">
            <img src="" alt="Thumbnail" />
        </div>
        <div class="video-info">
            <h3 class="video-title">{video.title}</h3>
            <p class="video-description">{video.description}</p>
            <p class="video-meta">
            <span class="category">{video.category}</span> • <span class="duration">{video.duration}</span>
            </p>
        </div>
        </div>
    ))}
</section>

<style>
    .video-card-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin: 2rem auto;
        max-width: 1300px; /* Incremento en el ancho máximo del contenedor */
    }

    .video-card {
        display: flex;
        gap: 1.5rem;
        padding: 2rem;
        border: 1px solid #ddd;
        border-radius: 12px;
        background-color: rgb(202, 212, 243);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.2s ease-in-out;
        width: 100%; /* Ocupa todo el ancho del contenedor */
        height: auto; /* Ajusta automáticamente según el contenido */
    }

    .video-card:hover {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .video-thumbnail {
        flex-shrink: 0; 
        width: 300px; 
        height: 280px; 
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .video-thumbnail img {
        width: 100%;
        height: 100%; 
        border-radius: 8px;
        object-fit: cover;
    }

    .video-info {
        display: flex;
        flex-direction: column;
        justify-content: center;
        flex: 1; /* Toma el resto del espacio disponible */
    }

    .video-title {
        font-size: 2rem;
        font-weight: bold;
        margin: 0 0 0.5rem 0;
    }

    .video-description {
        font-size: 1.8rem;
        color: #555;
        margin: 0 0 0.5rem 0;
    }

    .video-meta {
        font-size: 1rem;
        color: #888;
    }
</style>


