---
import ButtonVideo from './ButtonVideo.astro';

interface Video {
    id: string;
    title: string;
    description: string;
    category: string;
    duration: string;
    url: string;
}

interface Props {
    videos: Video[];
}

const { videos } = Astro.props;

const DEFAULT_THUMBNAIL = "/fondo1.jpg"; // Ruta de la imagen predeterminada
---
<section class="grid grid-cols-1 gap-6">
    {videos.map((video) => {
        return (
            <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform ">
                <div class="w-full h-48 overflow-hidden">
                    <img src={DEFAULT_THUMBNAIL} alt={`Miniatura de ${video.title}`} class="w-full h-full object-cover" />
                </div>
                <div class="p-4">
                    <h3 class="text-xl font-bold text-slate-800 mb-2">{video.title}</h3>
                    <p class="text-sm text-slate-600 mb-4">{video.description}</p>
                    <div class="flex justify-between items-center">
                        <p class="text-sm text-slate-500">
                            <span class="font-medium">{video.category}</span> â€¢ <span>{video.duration}</span>
                        </p>
                        <ButtonVideo videoId={video.id} />
                    </div>
                </div>
            </div>
        );
    })}
</section>

