---
import Image from "astro/components/Image.astro";
import myLogo from '../assets/SOLVE.png';
import Logout from "./Logout.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<header class="w-full bg-white shadow-md px-4 py-4 flex items-center justify-between relative">
    <div class="flex items-center px-4 mx-4">
        <a href="/inicio">
            <Image src={myLogo} alt="Logo Yawi Solve" class="w-44 h-auto max-w-full" />
        </a>
    </div>

    <nav class="absolute left-1/2 transform -translate-x-1/2 flex items-center">
        <span class="text-gray-700 text-2xl font-medium pb-2 border-b-4 border-transparent hover:border-[#204f72] transition-all duration-300">
            {title}
        </span>
    </nav>

    <div class="inline-flex items-center justify-center px-2 mx-2">
        <Logout />
    </div>
</header>








